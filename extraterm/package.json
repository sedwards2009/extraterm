  "version": "1.0.0",
  "scripts": {
    "build": "yarn run build-code && yarn run lint",
    "build-code": "tsc && shx cp src/render_process/*.html dist/render_process/ && shx cp src/*.js dist/",
    "build-icons": "node resources/extra_icons/build.js",
    "build-test-css": "node build_scripts/build_theme_css_test_page.js",
    "clean": "shx rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-strict": "eslint --max-warnings 1 \"src/**/*.ts\"",
    "test": "jest",
    "testsplitlayout": "yarn run build && nodeunit dist/render_process/SplitLayoutTest.js",
    "serve-test": "node src/test/httpserver.js"
  },
