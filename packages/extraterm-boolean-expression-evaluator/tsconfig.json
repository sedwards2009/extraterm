{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true
      
    },
    "filesGlob": [
        "./src/*.ts",
        "./src/test/*.ts"
    ],
    "exclude": [
        "./dist/**/*.ts"
    ]
}
