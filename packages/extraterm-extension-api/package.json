{
  "name": "@extraterm/extraterm-extension-api",
  "version": "0.14.0",
  "description": "Extension API for the Extraterm terminal",
  "author": "Simon Edwards",
  "license": "MIT",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/sedwards2009/extraterm.git"
  },
  "scripts": {
    "build": "yarn run build-fast && yarn run lint",
    "build-docs": "typedoc",
    "build-fast": "tsc",
    "clean": "shx rm -rf dist",
    "lint": "eslint \"src/**/*.ts\"",
    "lint-strict": "eslint --max-warnings 1 \"src/**/*.ts\"",
    "prepublish": "yarn run clean && yarn run build",
    "publish-pkg": "yarn publish --access public"
  },
  "dependencies": {
    "extraterm-event-emitter": "1.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "eslint": "7.19.0",
    "eslint-config-extraterm": "1.0.0",
    "shx": "^0.3.2",
    "typedoc": "^0.22.3",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "@nodegui/nodegui": "^0.44.0"
  }
}
