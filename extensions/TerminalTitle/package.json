{
  "name": "terminal-title",
  "description": "Terminal Title",
  "version": "1.0.0",
  "main": "dist/TerminalTitleExtension.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "yarn run build && jest"
  },
  "dependencies": {
    "extraterm-trim-between-tags": "1.0.0",
    "he": "1.2.0",
    "vue": "2.6.10",
    "vue-class-component": "6.3.2"
  },
  "devDependencies": {
    "@types/he": "1.1.0",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.18",
    "extraterm-extension-api": "0.1.0",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "3.4.5"
  },
  "contributes": {
    "commands": [
      {
        "command": "terminal-title:editTitle",
        "title": "Edit Title",
        "category": "terminal",
        "icon": "fas fa-pen",
        "when": ""
      }
    ],
    "tabTitleWidgets": [
      {
        "name": "title",
        "css": {
          "directory": "resources/sass",
          "cssFile": [
            "tab-title.scss"
          ],
          "fontAwesome": true
        }
      }
    ],
    "terminalBorderWidgets": [
      {
        "name": "edit-title",
        "border": "north",
        "css": {
          "directory": "resources/sass",
          "cssFile": [
            "editor.scss"
          ],
          "fontAwesome": true
        }
      }
    ],
    "menus": {
      "terminalTab": [
        {
          "command": "terminal-title:editTitle",
          "show": true
        }
      ]
    }
  }
}
